<div class="card border-dark my-3">
  <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center text-light">
    <h4>{{blog.title}}</h4>
    <p class="mt-3">Posted by {{blog.user.username}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="card-body text-dark">
    <p class="card-text">{{blog.content}}</p>
  </div>
</div>

{{#each comments}}
<div class="card border-dark my-3">
  <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center text-light">
  </div>
  <div class="card-body text-dark">
    <p class="card-text">{{content}}</p>
    <p class="card-text">- {{user.username}}, {{format_date date_created}}</p>
  </div>
</div>
{{/each}}

{{#if logged_in}}
<div class="card border-dark my-3">
  <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center text-light">
  </div>
    <div class="card-body">
        <form id="comment" data-blogid="{{blog.id}}">
            <div class="mb-3 text-dark">
                <label for="content" class="form-label">Comment</label>
                <textarea type="text" class="form-control" name="content"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
{{/if}}

<script src="/js/thread.js"></script>