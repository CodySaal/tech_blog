<div id="editPost" class="card border-dark my-3">
    <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center text-light">
        <h4>Edit Post</h4>
    </div>
    <div class="card-body text-dark">
        <form id="editPost" data-blogid="{{blog.id}}">
            <div>
                <label for="title" class="form-label">Title</label>
                <input id="title" type="text" class="form-control" name="title" value="{{blog.title}}">
            </div>
            <div>
                <label for="content" class="form-label">Content</label>
                <textarea id="content" type="text" class="form-control" name="content">{{blog.content}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update Post</button>
            <button type="submit" class="btn btn-primary">Delete</button>
        </form>
    </div>
</div>


<script src="/js/editPost.js"></script>